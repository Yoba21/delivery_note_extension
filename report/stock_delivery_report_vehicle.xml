<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_delivery_report" inherit_id="stock.report_delivery_document">

        <xpath expr="//div[hasclass('page')]" position="inside">

            <div style="padding-top:6px; border-top:1px solid #dee2e6;">

                <!-- Balance | Vehicle -->
                <div class="row" style="margin-bottom:6px;">

                    <div class="col-6">
                        <strong>Balance to pay:</strong>
                        <span t-field="o.due_amount"
                              t-options='{"widget":"monetary","display_currency":o.currency_id}'
                              style="font-weight:700; color:#dc3545; margin-left:4px;"/>
                    </div>

                    <div class="col-6">
                        <strong>Vehicle:</strong>
                        <t t-if="o.vehicle">
                            <span t-field="o.vehicle.name" style="margin-left:4px;"/>
                        </t>
                        <t t-else="">
                            <span style="color:#adb5bd; margin-left:4px;">–</span>
                        </t>
                    </div>

                </div>

                <!-- Driver | Signature -->
                <div class="row" style="margin-bottom:8px;">

                    <div class="col-6">
                        <strong>Driver:</strong>
                        <t t-if="o.driver">
                            <span t-field="o.driver.name" style="margin-left:4px;"/>
                        </t>
                        <t t-else="">
                            <span style="color:#adb5bd; margin-left:4px;">–</span>
                        </t>
                    </div>

                    <div class="col-6">
                        <strong>Driver Signature</strong>
                        <div style="height:22px; border-bottom:1px solid #999;"></div>
                    </div>

                </div>

                <!-- Receiver -->
                <div class="row" style="margin-bottom:6px;">
                    <div class="col-6">
                        <strong>Received By</strong>
                        <div style="height:22px; border-bottom:1px dashed #999;"></div>
                    </div>

                    <div class="col-6">
                        <strong>ID No</strong>
                        <div style="height:22px; border-bottom:1px dashed #999;"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <strong>Signed</strong>
                        <div style="height:22px; border-bottom:1px dashed #999;"></div>
                    </div>

                    <div class="col-6">
                        <strong>Date</strong>
                        <div style="height:22px; border-bottom:1px dashed #999;"></div>
                    </div>
                </div>

            </div>

        </xpath>

    </template>
</odoo>
