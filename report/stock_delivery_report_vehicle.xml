<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_delivery_report" inherit_id="stock.report_delivery_document">


        <xpath expr="//div[hasclass('page')]" position="inside">

            <!-- Separator -->
            <div style="border-top:1px solid #000; margin-top:8px; margin-bottom:12px;"/>

            <!-- Balance to pay (Due Amount) -->
            <div class="row mb8">
                <div class="col-12 text-right">
                    <strong>Balance to pay:</strong>
                    <span t-field="o.due_amount"
                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                </div>
            </div>

            <!-- Driver & Vehicle Info -->
            <div class="row mt16 mb16">
                <div class="col-6">
                    <strong>Driver:</strong>
                    <span t-esc="o.driver.name or ''"/>
                </div>
                <div class="col-6">
                    <strong>Vehicle:</strong>
                    <span t-esc="o.vehicle.name or ''"/>
                </div>
            </div>

            <!-- Received By & Date -->
            <div class="row mb16">
                <div class="col-6">
                    <strong>Received by:</strong>
                    <div style="margin-top:8px; height:30px; border-bottom:1px solid #000;"/>
                </div>
                <div class="col-6 text-right">
                    <strong>Date:</strong>
                    <span t-field="o.scheduled_date"/>
                </div>
            </div>

            <!-- Signature Section -->
            <div class="row mt32">
                <div class="col-6">
                    <strong>Driver Signature</strong>
                    <div style="margin-top:8px; height:80px; border:1px solid #000;"/>
                </div>
            </div>

        </xpath>

    </template>
</odoo>
